<% provide(:title, 'Sign Up') %>
<div class="row justify-content-center">
    <div class="col-6 my-4">
        <div class="card">
            <div class="card-body">
            <h3 class="mb-3">Log in</h3>
            <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
                <%= f.label :email, class: 'text-sm' %>
                <%= f.email_field :email, class: 'form-control mb-3' %>
                <%= f.label :password, class: 'text-sm'%>
                <%= f.password_field :password, class: 'form-control mb-3' %>
                <%= f.submit "Log in", class: "btn btn-primary mb-3" %>
            <% end %>
            <p class="mb-0">New user? <%= link_to "Sign up now!", signup_path %></p>
            </div>
        </div>
    </div>
</div>

