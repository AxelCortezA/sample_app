<% provide(:title, 'Sign Up') %>
<div class="row justify-content-center">
    <div class="col-6 my-4">
        <div class="card">
            <div class="card-body">
            <h3 class="mb-3">Sign Up</h3>
            <%= form_with(model: @user, local: true) do |f| %>
                <%= render 'shared/error_messages' %>

                <%= f.label :name, class: 'text-sm' %>
                <%= f.text_field :name, class: 'form-control mb-3' %>

                <%= f.label :email, class: 'text-sm' %>
                <%= f.text_field :email, class: 'form-control mb-3' %>

                <%= f.label :password, class: 'text-sm' %>
                <%= f.password_field :password, class: 'form-control mb-3' %>

                <%= f.label :password_confirmation, class: 'text-sm' %>
                <%= f.password_field :password_confirmation, class: 'form-control mb-3', typer: 'password' %>

                <%= f.submit "Create my account", class: "btn btn-primary" %>
            <% end %>
            </div>
        </div>
    </div>
</div>
